include "std.porth"

macro BUFF_CAP 1024 end
macro buffer mem end

while BUFF_CAP buffer stdin read dup 0 > do
    0 while 2dup > do
        dup buffer + ,

        if dup 'a' >= over 'z' <= and do
            2dup 'a' - 13 + 26 mod 'a' +
            swap buffer + swap .
        end

        if dup 'A' >= over 'Z' <= and do
            2dup 'A' - 13 + 26 mod 'A' +
            swap buffer + swap .
        end

        drop

        1 +
    end drop

    buffer puts
end drop
