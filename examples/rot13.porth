include "std.porth"

macro BUFF_CAP 1024 end
memory buffer BUFF_CAP end

"Type something here: " puts
while BUFF_CAP buffer stdin read dup 0 > do
    0 while 2dup > do
        dup buffer + @8

        dup 'a' >= over 'z' <= and if 
            2dup 'a' - 13 + 26 mod 'a' +
            swap buffer + !8
        end

        dup 'A' >= over 'Z' <= and if 
            2dup 'A' - 13 + 26 mod 'A' +
            swap buffer + !8
        end

        drop

        1 +
    end drop

    "Rot13 result: " puts
    buffer puts
    "Type something here: " puts
end drop
