include "std.porth"

macro NAME_CAP 256 end
"What is your name?\n" puts

memory name NAME_CAP end

NAME_CAP name stdin read

if dup 0 <= do
    "ERROR: could not read your name\n" eputs
    1 exit
end 

// remove the last new line
if name over + 1 - @8 '\n' = do
    1 -
end

"Hello " puts
name puts

